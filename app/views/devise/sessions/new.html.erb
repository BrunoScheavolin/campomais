<div class="d-flex flex-column justify-content-between align-items-center vh-100 bg-white px-3">
  <div class="w-100" style="max-width: 380px; margin-top: 60px;">
    <div class="text-center mb-4">
      <h2 class="text-center text-success mb-4 fw-bold">Campo+</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.email_field :email, placeholder: "NÃºmero do celular ou email", class: "form-control rounded-pill p-3" %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, placeholder: "Senha", class: "form-control rounded-pill p-3" %>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "Entrar", class: "btn btn-success rounded-pill fw-semibold py-2" %>
      </div>
    <% end %>

    <div class="text-center mb-4">
      <%= link_to "Esqueceu a senha?", new_password_path(resource_name),
                  class: "text-decoration-none text-success fw-semibold" %>
    </div>

    <div class="text-center">
      <%= link_to "Criar nova conta", new_registration_path(resource_name),
                  class: "btn btn-outline-primary rounded-pill fw-semibold px-4 py-2" %>
    </div>
  </div>
</div>
