<div class="card mx-auto border-0 bg-white p-3" style="width: 350px;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Despesas</h4>
    <div>
      <%= link_to new_admin_expense_path, class: "btn btn-light border-0" do %>
        <i class="bi bi-plus-lg"></i>
      <% end %>
    </div>
  </div>

  <% if @expenses.any? %>
    <div class="d-flex flex-column gap-3">
      <% @expenses.each do |expense| %>
        <%= link_to admin_expense_path(expense), class: "text-decoration-none", data: { turbo: false } do %>
          <div class="card shadow-sm rounded-3 p-3 d-flex flex-column gap-3">
            <div class="d-flex align-items-center gap-2">
              <i class="bi bi-receipt fs-5 text-success" style="min-width: 24px;"></i>
              <span class="fw-bold text-dark text-truncate fs-5">
                <%= expense.description %>
              </span>
            </div>

            <div class="d-flex flex-column gap-2">
              <div class="d-flex align-items-center gap-2">
                <i class="bi bi-cash-stack fs-5 text-danger" style="min-width: 24px;"></i>
                <span class="text-dark">
                  Valor: <strong>R$ <%= number_to_currency(expense.value, unit: "", separator: ",", delimiter: ".") %></strong>
                </span>
              </div>

              <div class="d-flex align-items-center gap-2">
                <i class="bi bi-geo-alt fs-5 text-success" style="min-width: 24px;"></i>
                <span class="text-dark">
                  <%= expense.animal_production.property.name %> - <%= expense.animal_production.name %>
                </span>
              </div>

              <div class="d-flex align-items-center gap-2">
                <i class="bi bi-calendar-event fs-5 text-success" style="min-width: 24px;"></i>
                <span class="text-dark">
                  Criado em <%= expense.created_at.strftime("%d/%m/%Y") %>
                </span>
              </div>

            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-muted py-4">
      <p class="fs-5 mb-0">Nenhuma despesa cadastrada</p>
    </div>
  <% end %>
</div>
