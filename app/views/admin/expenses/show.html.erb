<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 mb-4">
      <div class="card p-3 shadow-sm rounded w-100" style="background-color: white;">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2 class="mb-0">Detalhes da Despesa</h2>
          <div class="dropdown">
            <button class="btn btn-light border-0" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-three-dots"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
              <li><%= link_to "Editar", edit_admin_expense_path(@expense), class: "dropdown-item" %></li>
              <li>
                <%= button_to "Excluir", admin_expense_path(@expense),
                              method: :delete,
                              data: { turbo: false, confirm: "Tem certeza que deseja excluir esta despesa?" },
                              class: "dropdown-item text-danger" %>
              </li>
            </ul>
          </div>
        </div>

        <p><strong>Descrição:</strong> <%= @expense.description %></p>
        <p><strong>Valor:</strong> R$ <%= number_to_currency(@expense.value, unit: "", separator: ",", delimiter: ".") %></p>
        <p><strong>Produção Animal:</strong> <%= @expense.animal_production.name %></p>
        <p><strong>Propriedade:</strong> <%= @expense.animal_production.property.name %></p>
        <p><strong>Data de criação:</strong> <%= l(@expense.created_at.to_date) %></p>

        <div class="d-flex justify-content-start mt-4">
          <a href="javascript:history.back()" class="btn btn-secondary">Voltar</a>
        </div>
      </div>
    </div>
  </div>
</div>
