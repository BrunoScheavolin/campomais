<div class="card mx-auto border-0 bg-white p-3" style="width: 350px;">
  <div class="d-flex justify-content-between align-items-start mb-3">
    <h4 class="mb-0">Propriedades</h4>
    <div>
      <%= link_to new_admin_property_path, class: "btn btn-light border-0" do %>
        <i class="bi bi-plus-lg"></i>
      <% end %>
    </div>
  </div>

  <% if @properties.any? %>
    <div class="row g-4">
      <% @properties.each do |property| %>
        <div class="col-12 col-lg-4">
          <%= link_to admin_property_path(property), class: "text-decoration-none", data: { turbo: false } do %>
            <div class="card d-flex flex-column justify-content-between align-items-start shadow-sm rounded-3 p-3">
              <div class="d-flex align-items-center mb-3">
                <i class="fas fa-house fs-5 text-success me-2" style="min-width: 24px;"></i>

                <span class="fw-bold text-dark text-truncate" style="font-size: 1.2rem;"><%= property.name %></span>
              </div>
              <div class="d-flex flex-column gap-2">
                <div class="d-flex align-items-center">
                  <i class="fas fa-tractor fs-5 text-success me-2" style="min-width: 24px;"></i>
                  <span class="text-dark">
          <%= property.animal_productions.count %> Atividades de Produção
        </span>
                </div>
                <div class="d-flex align-items-center">
                  <i class="bi bi-list-task fs-5 text-success me-2" style="min-width: 24px;"></i>
                  <span class="text-dark">
          <%= property.animal_productions.flat_map(&:tasks).count %> Tarefas
        </span>
                </div>
                <div class="d-flex align-items-center">
                  <i class="bi bi-people fs-5 text-success me-2" style="min-width: 24px;"></i>
                  <span class="text-dark">
          <%= property.property_accesses.count %> Colaborador(es)
        </span>
                </div>
              </div>
            </div>
          <% end %>

        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-muted py-4">
      <p class="fs-5">Nenhuma propriedade cadastrada</p>
    </div>
  <% end %>
</div>