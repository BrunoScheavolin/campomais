<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card p-4 shadow-sm rounded-4 mb-4">
        <div class="d-flex justify-content-between align-items-start mb-3">
          <h4 class="text-success fw-bold mb-0"><%= @production_module.name %></h4>

          <div class="dropdown">
            <button class="btn btn-light border-0" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-three-dots fs-5"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
              <li><%= link_to "Editar", edit_admin_production_module_path(@production_module), class: "dropdown-item" %></li>
              <li>
                <%= button_to "Excluir", admin_production_module_path(@production_module),
                              method: :delete,
                              data: { turbo: false, confirm: "Tem certeza que deseja excluir este módulo?" },
                              class: "dropdown-item text-danger" %>
              </li>
            </ul>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <p class="mb-1 text-muted small fw-semibold">Tipo do Módulo</p>
            <p class="mb-0"><%= @production_module.module_type %></p>
          </div>
        </div>
      </div>

      <div class="card p-4 shadow-sm rounded-4 mb-4">
        <h5 class="text-success mb-3">Configurações de Produção</h5>

        <% production_settings = @production_module.production_settings || {} %>
        <div class="row">
          <% if production_settings["breed"] %>
            <div class="col-md-6 mb-2"><strong>Raça</strong></div>
          <% end %>
          <% if production_settings["animal_quantity"] %>
            <div class="col-md-6 mb-2"><strong>Quantidade de Animais</strong></div>
          <% end %>
          <% if production_settings["average_weight"] %>
            <div class="col-md-6 mb-2"><strong>Peso Médio</strong></div>
          <% end %>
          <% if production_settings["eggs_produced"] %>
            <div class="col-md-6 mb-2"><strong>Ovos Produzidos</strong></div>
          <% end %>
          <% if production_settings["milk_production"] %>
            <div class="col-md-6 mb-2"><strong>Produção de Leite</strong></div>
          <% end %>
          <% if production_settings["used_area"] %>
            <div class="col-md-6 mb-2"><strong>Área Utilizada</strong></div>
          <% end %>
          <% if production_settings["notes"] %>
            <div class="col-md-6 mb-2"><strong>Notas</strong></div>
          <% end %>
        </div>
      </div>

      <div class="card p-4 shadow-sm rounded-4 mb-4">
        <h5 class="text-success mb-3">Configurações de Tarefa</h5>

        <% settings = @production_module.settings || {} %>
        <div class="row">
          <% if settings["description"] %>
            <div class="col-md-6 mb-2"><strong>Descrição</strong></div>
          <% end %>
          <% if settings["due_date"] %>
            <div class="col-md-6 mb-2"><strong>Prazo</strong></div>
          <% end %>
          <% if settings["priority"] %>
            <div class="col-md-6 mb-2"><strong>Prioridade</strong></div>
          <% end %>
          <% if settings["responsible"] %>
            <div class="col-md-6 mb-2"><strong>Responsável</strong></div>
          <% end %>
          <% if settings["uses_supplies"] %>
            <div class="col-md-6 mb-2"><strong>Usa Insumos</strong></div>
          <% end %>
          <% if settings["image"] %>
            <div class="col-md-6 mb-2"><strong>Imagem</strong></div>
          <% end %>
          <% if settings["observation"] %>
            <div class="col-md-6 mb-2"><strong>Observação</strong></div>
          <% end %>
        </div>
      </div>

      <!-- Botão Voltar -->
      <div class="d-flex justify-content-start">
        <%= link_to "Voltar", admin_production_modules_path, class: "btn btn-secondary", data: { turbo: false } %>
      </div>

    </div>
  </div>
</div>
